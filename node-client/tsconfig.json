{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2015",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": true,
        "outDir": "dist/",
        "moduleResolution": "Node",
        "declaration": true,
        "declarationDir": "dist/"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}