{
    "name": "test_server",
    "version": "0.0.1",
    "private": false,
    "bin": {
        "$": "./dist/bin/app.js"
    },
    "main": "./dist/app",
    "scripts": {
        "test": "npm run build && cd dist &&  node app",
        "build": "tsc && node ./tools/copy",
        "watch": "tsc --watch --noEmit --noErrorTruncation --pretty",
        "build-proto": "rm -f ./proto-structs/index.js && rm -f ./proto-structs/index.d.ts && npm run build-proto:pbjs && npm run build-proto:pbts",
        "build-proto:pbjs": "pbjs --dependency protobufjs/minimal.js --target static-module --wrap commonjs --out ./proto-structs/index.js ../proto/*.proto",
        "build-proto:pbts": "pbts --main --out ./proto-structs/index.d.ts ./proto-structs/index.js && node ./tools/wrap-pbts-result.js"
    },
    "dependencies": {
        "@types/bluebird": "^3.5.19",
        "@types/node": "^12.7.12",
        "bluebird": "^3.5.1",
        "pinus": "1.6.3",
        "proto-structs": "file:proto-structs",
        "protobufjs": "^6.11.2",
        "reflect-metadata": "^0.1.10",
        "source-map-support": "^0.5.0"
    },
    "devDependencies": {
        "cpy": "^8.1.0",
        "tslint": "5.20.1",
        "typescript": "^4.3.5"
    }
}
